{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ],
      "~~/*": [
        "./*"
      ],
      "@@/*": [
        "./*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ],
  "vueCompilerOptions": {
    "experimentalShamefullySupportOptionsApi": true,
    "experimentalDisableTemplateSupport": true
  },
  "compileOptions": {
    "jsx": "preserve",
  }
}